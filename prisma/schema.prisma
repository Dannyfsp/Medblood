// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int           @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String        @unique
  password    String
  phone       String
  isVerified  Boolean       @default(false)
  address     String
  bloodGroup  String
  role        Role          @default(USER)
  state       String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  appointment Appointment[]
}

model Donor {
  id          Int        @id @default(autoincrement())
  firstname   String
  lastname    String
  email       String     @unique
  password    String
  phone       String
  isVerified  Boolean    @default(false)
  address     String
  bloodGroup  String
  state       String
  lastDonated DateTime
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  donation    Donation[]
}

model Donation {
  id             Int      @id @default(autoincrement())
  bloodGroup     String
  dateOfDonation DateTime
  amount         Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  donor          Donor    @relation(fields: [donorId], references: [id])
  donorId        Int
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
}

enum Role {
  USER
  ADMIN
}
